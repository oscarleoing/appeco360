<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan|stateHidden"
    >


    <!-- Contenedor principal vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <FrameLayout
                android:id="@+id/contenedorMain44"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



        <!-- Barra de dirección -->
        <LinearLayout
            android:id="@+id/directionBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="12dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tvDireccionTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección seleccionada:"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Aún no seleccionada)"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/autocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="4dp"
            android:visibility="gone">   <!-- oculto -->

            <fragment
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </FrameLayout>


        <!-- Autocomplete
        <FrameLayout
            android:id="@+id/autocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="4dp">

            <fragment
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </FrameLayout>

        <View android:layout_width="match_parent" android:layout_height="16dp"/>
        Fragmento de Google Maps -->

        <FrameLayout
            android:id="@+id/layoutMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Fragmento de mapa -->

                <!-- Contenedor vertical para barras -->

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <LinearLayout
                    android:id="@+id/searchContainer"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <!-- Barra de búsqueda de colonias / fraccionamientos -->
                    <AutoCompleteTextView
                        android:id="@+id/etSearchColonia"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Buscar colonia"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:drawableLeft="@android:drawable/ic_menu_search"
                        android:drawableEnd="@drawable/ic_close"
                        android:inputType="text"
                        android:singleLine="true"
                        android:visibility="visible"
                        android:elevation="10dp"/>

                    <!-- Contenedor horizontal para calle + número -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:weightSum="3">

                        <!-- Barra de búsqueda de calles -->
                        <AutoCompleteTextView
                            android:id="@+id/etSearchCalle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="2"
                            android:hint="Buscar calle"
                            android:background="@drawable/rounded_edittext"
                            android:padding="12dp"
                            android:drawableLeft="@android:drawable/ic_menu_search"
                            android:drawableEnd="@drawable/ic_close"
                            android:inputType="text"
                            android:singleLine="true"
                            android:visibility="visible"
                            android:elevation="10dp"/>

                        <!-- Barra para número de calle -->
                        <EditText
                            android:id="@+id/etNumeroCalle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="No."
                            android:background="@drawable/rounded_edittext"
                            android:padding="12dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:visibility="visible"
                            android:elevation="10dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>



    </LinearLayout>



    <!-- Botón enviar -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:padding="14dp"
        android:text="Capturar Datos"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"/>

    <!-- Botón ubicación flotante -->
    <ImageButton
        android:id="@+id/btnUbicacion"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btnEnviar"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_location"
        android:tint="@android:color/white"
        android:contentDescription="Mi ubicación"/>
</RelativeLayout>
