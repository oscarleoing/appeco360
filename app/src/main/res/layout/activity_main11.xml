<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPantalla2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity8">




    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbarTrackVertical="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">
            <!-- Contenedor horizontal tarjeta + botÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnMostrarMapa"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:cardBackgroundColor="@android:color/white"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="90dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_card_background">

                        <!-- Franja lateral con esquinas redondeadas -->
                        <LinearLayout
                            android:id="@+id/franjaIcono"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:minHeight="90dp"
                            android:gravity="center"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:background="@drawable/degradado_franja_icono_rounded"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/iconUbicacion"
                                android:layout_width="match_parent"
                                android:minWidth="45dp"
                                android:layout_height="wrap_content"
                                android:minHeight="59dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_location"
                                android:contentDescription="UbicaciÃ³n"
                                app:tint="@android:color/black" />
                        </LinearLayout>

                        <!-- Contenido de la tarjeta -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="90dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/tvEtiquetaDireccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="DirecciÃ³n seleccionada"
                                android:visibility="gone"
                                android:textColor="@android:color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDireccion2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Selecciona una ubicaciÃ³n"
                                android:textSize="18sp"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- ðŸ”¹ BOTÃ“N A LA DERECHA DE LA TARJETA -->
                <ImageButton
                    android:id="@+id/btnIrCasa"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/ic_casa"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Mi ubicaciÃ³n"
                    app:tint="@android:color/white" />

            </LinearLayout>

            <!-- ðŸ”¹ TelÃ©fono con botones circulares -->
            <!-- ðŸ”¹ LADA + TelÃ©fono con botÃ³n, centrados y mÃ¡s grandes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Campo LADA -->
                <EditText
                    android:id="@+id/etLada"
                    android:layout_width="55dp"
                    android:layout_height="58dp"
                    android:hint="LADA"
                    android:text="449"
                    android:inputType="number"
                    android:maxLength="3"
                    android:background="@drawable/estilo_edittext"
                    android:textSize="21sp"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp" />

                <!-- SeparaciÃ³n -->
                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <!-- Campo TelÃ©fono -->
                <EditText
                    android:id="@+id/etTelefono2"
                    android:layout_width="120dp"
                    android:layout_height="58dp"
                    android:hint="TelÃ©fono"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:background="@drawable/estilo_edittext"

                    android:textSize="21sp"

                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp" />


                <!-- Campo de telÃ©fono mÃ¡s pequeÃ±o -->
                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="180dp"
                    android:layout_height="44dp"
                    android:hint="TelÃ©fono"
                    android:inputType="phone"
                    android:maxLength="12"

                    android:background="@drawable/estilo_edittext"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbAnonimo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"

                    android:background="@drawable/bg_btn_circular"
                    android:gravity="center"

                    android:button="@null"
                android:padding="0dp"

                android:drawableTop="@drawable/reporteanonimo"
                android:drawableTint="#C9C6C5"
                android:drawablePadding="0dp"

                app:rippleColor="@color/black"
                app:useMaterialThemeColors="false" />


                <!-- BotÃ³n amarillo circular -->
                <ImageButton
                    android:id="@+id/btnAmarillo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="#FFC107"
                    android:background="@drawable/bg_btn_circular"
                    android:contentDescription="BotÃ³n amarillo"
                    android:visibility="gone"
                    android:src="@android:drawable/ic_input_get"
                    app:tint="#FFFFFF" />

            </LinearLayout>


            <AutoCompleteTextView
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Nombre"
                android:inputType="textCapCharacters"
                android:layout_marginBottom="3dp"
                android:background="@drawable/estilo_edittext"
                android:textSize="17sp"
                android:paddingHorizontal="6dp"
                android:imeOptions="actionNext"
                android:paddingVertical="1dp" />

            <AutoCompleteTextView
                android:id="@+id/etApellidoPaterno"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Apellido Paterno"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:layout_marginBottom="3dp"
                android:background="@drawable/estilo_edittext"
                android:textSize="17sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp" />

            <AutoCompleteTextView
                android:id="@+id/etApellidoMaterno"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Apellido Materno"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:layout_marginBottom="3dp"
                android:background="@color/gris_deshabilitado"
                android:textSize="17sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="DescripciÃ³n del problema"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="12dp"
                android:background="@drawable/estilo_edittext"
                android:textSize="17sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="6dp" />

                <!-- Multimedia selector -->
                <LinearLayout
                    android:id="@+id/layoutFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivThumbnail"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:tint="#000000" />

                    <TextView
                        android:id="@+id/tvAddMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar / tomar foto, video, audio o PDF"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Fotos y videos aÃ±adidos -->
                <TextView
                    android:id="@+id/tvGalleryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fotos y videos aÃ±adidos"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp" />
                </HorizontalScrollView>

                <!-- Audios aÃ±adidos -->
                <TextView
                    android:id="@+id/tvAudioLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audios aÃ±adidos"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/audioContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:visibility="gone" />

                <!-- PDFs aÃ±adidos -->
                <TextView
                    android:id="@+id/tvPdfLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Archivos PDF aÃ±adidos"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/pdfContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
        <!-- ðŸ”¹ CONTENEDOR BOTONES + BURBUJAS -->
        <LinearLayout
            android:id="@+id/layoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="6dp">

            <!-- ðŸ”¹ CONTENEDOR GENERAL DE BURBUJAS -->
            <LinearLayout
                android:id="@+id/layoutBurbujas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <!-- ðŸ”¸ BURBUJA CATEGORÃA -->
                <!-- ðŸ”¸ BURBUJA CATEGORÃA (PestaÃ±a principal) -->
                <LinearLayout
                    android:id="@+id/burbujaCategoria"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_top"
                    android:elevation="4dp"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/viewColorCategoria2"
                        android:layout_width="8dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="6dp"
                        android:background="#CCCCCC" />

                    <ImageView
                        android:id="@+id/imgIconoCategoria"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/txtCategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CategorÃ­a"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>


                <!-- ESPACIO -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />


                <!-- ðŸ”¸ BURBUJA SUBCATEGORÃA (PestaÃ±a secundaria) -->
                <LinearLayout
                    android:id="@+id/burbujaSubcategoria"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_top_secondary"
                    android:elevation="3dp"

                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgIconoSubcategoria"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/txtSubcategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SubcategorÃ­a"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>


                <!-- ðŸ”¹ BOTÃ“N ABAJO -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar GuÃ­a"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:textSize="15sp" />

        </LinearLayout>


        <!-- ðŸ”´ MODAL flotante de grabaciÃ³n -->
        <FrameLayout
            android:id="@+id/layoutGrabandoAudio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"

            android:visibility="gone"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_modal"
                android:padding="24dp"
                android:elevation="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvRecordingTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartRecording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grabar"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="16dp" />

                    <Button
                        android:id="@+id/btnCancelarGrabacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

