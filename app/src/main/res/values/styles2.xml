<resources>


    <!-- Contenedor para los botones en fila HORIZONTAL (barra scroll) -->
    <style name="TableroButtonContainerHorizontal2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_tablero_button</item>
    </style>

    <!-- Botón de Categoría principal -->
    <style name="v2_CategoryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Botón de Subcategoría -->
    <style name="v2_SubCategoryButtonStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/border_bottom_yellow</item>
    </style>

    <!-- Texto dentro de la Categoría -->
    <style name="v2_CategoryTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Ícono dentro de la Categoría -->
    <style name="v2_CategoryIconStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="Shape.Carrusel" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>


</resources>
